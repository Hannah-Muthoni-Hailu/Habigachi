<html>
    <head>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="/styles/styles.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Irish+Grover&family=Itim&family=Lemon&display=swap" rel="stylesheet">
        <title>Habigachi</title>
    </head>
    <body class="position-relative">
        <form action="<%= endpoint %>" method="post" id="auth_form" class="bg-body-secondary text-center p-4 mt-10 border rounded-4 position-absolute top-50 start-50 translate-middle">
            <img src="/images/cat.png" alt="Cute white habigachi cat logo" class="h-25">
            <% if (type == "Signup") { %>
                <h3 class="mb-5">Welcome stranger</h3>
            <% } else { %>
                <h3 class="mb-5">Welcome back</h3>
            <% } %>
            <div class="mb-3">
                <% if (type == "Signup") { %>
                    <label for="name" class="form-label"> <strong>What should your Habigachi call you?</strong></label>
                <% } else { %>
                    <label for="name" class="form-label"><strong>What does your Habigachi call you?</strong></label>
                <% } %>
                <input type="text" placeholder="Username" id="name" class="form-control" name="username" required>
            </div>
            <% if (type == "Signup") { %>
                <div class="mb-3">                                            
                    <label for="email" class="form-label"><strong>How can your Habigachi contact you?</strong></label>
                    <input type="email" placeholder="Email" id="email" class="form-control" name="email" required>
                </div>
            <% } %>
                <div class="mb-3">
                    <% if (type == "Signup") { %>
                        <label for="password" class="form-label"><strong>Protect Habigachi with a password</strong></label>
                    <% } else { %>
                        <label for="password" class="form-label"><strong>What's the secret code?</strong></label>
                    <% } %>
                    <input type="password" placeholder="Password" id="password" class="form-control" name="password" required>
                </div>
            <% if (type == "Signup") { %>
                <button type="submit" class="btn btn-secondary mb-4 fs-5">One Habigachi Please</button>
            <% } else { %>
                <button type="submit" class="btn btn-secondary mb-4 fs-5">How's my Habigachi?</button>
            <% } %>
            <% if (type == "Signup") { %>
                <p class="mb-5">Already have an account? <a href="/login">Login</a> instead! </p>
            <% } else { %>
                <p class="mb-5">Dont have an account? <a href="/signup">Signup</a> instead! </p>
            <% } %>
        </form>
    </body>
</html>