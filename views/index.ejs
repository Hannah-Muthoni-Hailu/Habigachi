<html>
    <head>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="/styles/styles.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Irish+Grover&family=Itim&family=Lemon&display=swap" rel="stylesheet">
        <title>Habigachi</title>
    </head>
    <body style="overflow: hidden; height: 100vh;" id="home-body" class="container">
        <div class="row h-100">
            <section class="col-4 rounded-4 h-100" id="habit-section">
                <a class="float-end m-2" href="/newhabit"><img src="/images/plus.png" alt="Icon for adding a new habit" id="plus-icon"></a>
                <% if (habits.length != 0) { %>
                    <div class="mt-4 w-100 h-100" style="overflow: scroll;">
                        <% for (let i=0; i < habits.length; i++) { %>
                            <form action="/update_habit" method="post" class="d-flex flex-row-reverse align-items-center w-100 ps-1 pe-2 h-25">
                                <div class="<%= habits[i].color %> rounded-4 p-1 d-flex flex-column align-items-center w-100 h-75">
                                    <p class="fs-6 h-25 p-2"><%= habits[i].name %></p> <!--, Color: <%= habits[i].color %>, Done: <%= habits[i].done %>-->
                                    <input type="text" name="habit" value="<%= habits[i].habit_id %>" hidden>
                                    <button type="submit" name="action" value="delete" class="btn btn-primary">Delete</button>
                                </div>
                                <button type="submit" name="action" value="done" class="checkbox" ></button>
                            </form>
                        <% } %>
                    </div>
                <% } %>
            </section>
            <section class="col d-flex flex-row align-self-center justify-content-center">
                <!-- <h1 style="text-align: center;"><%= totalDone %></h1> -->
                <img src="/images/cat.png" alt="Your growing habigachi" class="ml-auto" style="height: 200px;">
            </section>
        </div>
    </body>
</html>